<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grogshop.manage" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />

    <application
        android:name=".common.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 登录界面 -->
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".ui.LunchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.grogshop.manage.ui.LunchActivity" />
        </activity>
        <!-- 主界面 -->
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- 启动界面 -->
        <activity
            android:name=".ui.LunchActivity"
            android:label="@string/title_activity_lunch" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 关于界面 -->
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".ui.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.grogshop.manage.ui.MainActivity" />
        </activity>
        <!-- 管理员界面 -->
        <activity
            android:name=".ui.AdminMainActivity"
            android:label="@string/title_activity_admin_main" >
        </activity>
    </application>

</manifest>
